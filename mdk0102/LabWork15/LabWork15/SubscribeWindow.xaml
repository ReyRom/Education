<Window x:Class="LabWork15.SubscribeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork15"
        mc:Ignorable="d"
        Title="SubscribeWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label  Content="Введите E-Mail"/>
        <TextBox Grid.Row="1">
            <TextBox.Style>
                <Style>
                    <Setter Property="TextBox.FontSize" Value="20"/>
                    <Setter Property="TextBox.Margin" Value="5"/>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button Content="Подписаться" Grid.Row="2">
            <Button.Style>
                <Style>
                    <Setter Property="Button.Width" Value="100"/>
                    <Setter Property="Button.Height" Value="40"/>
                    <Setter Property="Button.Background" Value="LightCoral"/>
                    <Setter Property="Button.Foreground" Value="LightBlue"/>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>
