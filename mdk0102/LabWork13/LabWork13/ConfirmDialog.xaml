<Window x:Class="Task1.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Подтверждение" Height="200" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="why.jpg"/>
        <Label Content="Вы хотите закрыть приложение?" Grid.Column="1" HorizontalAlignment="Left" Margin="63,30,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="243"/>
        <Button x:Name="yes" Content="Да" Grid.Column="1" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="50" Background="Green" Click="Yes_Click"/>
        <Button x:Name="no" Content="Нет" Grid.Column="2" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="50" Background="Red" Click="No_Click"/>

    </Grid>
</Window>
